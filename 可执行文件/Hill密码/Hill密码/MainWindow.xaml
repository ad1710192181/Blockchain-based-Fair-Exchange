        <Button Content="加密" HorizontalAlignment="Left" Height="87" Margin="318,61,0,0" VerticalAlignment="Top" Width="163" FontSize="24" Click="Button_Click"/>
        <Button Content="解密" HorizontalAlignment="Left" Height="86" Margin="318,153,0,0" VerticalAlignment="Top" Width="163" FontSize="24"/>
        <TextBox x:Name="密钥" HorizontalAlignment="Left" Height="92" Margin="318,270,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="163"/>

    </Grid>
</Window>
